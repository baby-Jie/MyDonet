<Window x:Class="WpfTest.Views.FullScreenWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest.Views"
        mc:Ignorable="d"
        Title="FullScreenWin"
        Height="450" Width="800"
        WindowStyle="None"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        AllowsTransparency="False"
        ResizeMode="NoResize"
        >

    <Grid x:Name="MainGrid">
        <Label Content="TopLeft" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"></Label>

        <Label Content="TopRight" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="20"></Label>

        <Label Content="BottomLeft" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="20"></Label>

        <Label Content="BottomRight" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="20"></Label>

        <Button Content="Close" Click="ButtonBase_OnClick" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>

        <Button Content="ShowMessage" Click="ButtonBase1_OnClick" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="500,0,0,0"></Button>
    </Grid>
</Window>
